{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "List of structural divisions",
  "description": "The list of institituions within the jurisdiction of the Ministry of labour and social protection of the Republic of Bashkortostan.",
  "type": "array",
  "minItems": 1,
  "items": {
    "description": "Institution.",
    "type": "object",
    "properties": {
      "full-name": {
        "description": "Name of institution.",
        "type": "string"
      },
      "short-name": {
        "description": "Shorter name of institution.",
        "type": "string"
      },
      "address": {
        "description": "Address of institution.",
        "type": "string"
      },
      "email": {
        "description": "Email address of institution.",
        "type": "string"
      },
      "phone": {
        "description": "Phone number of institution.",
        "type": "string"
      },
      "website": {
        "description": "URL to institution website.",
        "type": "string"
      }
    },
    "required": ["full-name"]
  }
}